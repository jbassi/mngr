doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/index.css')
    link(rel='stylesheet', href='javascripts/sidr/stylesheets/jquery.sidr.dark.css')
    //script(src='../javascripts/cufon-yui.js', type='text/javascript')
    //script(src='../javascripts/BrandonLight.js', type='text/javascript')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    //script. Cufon.replace('h1');
    //script. Cufon.replace('navtext');
    script.
      $(document).ready(function() {
        $('#menu').sidr({
        name: 'sidr-left',
        side: 'left',
        speed: 100
        });
        $('#login').sidr({
        name: 'sidr-right',
        side: 'right',
        body: '#login',
        displace: true,
        speed: 100
        });
      });

  body
  block content
    script(src='/socket.io/socket.io.js')
    script(src='javascripts/client.js')
    script(src='javascripts/jquery.js') //jquery
    script(src='javascripts/sidr/jquery.sidr.min.js') //sidr

    .header
      #top
        a#menu(href='#menu')
          // not responsive
          img#menuimage(src='../resources/menu.png')
          navtext MENU
        a#login(href='#login')
          navtext LOGIN
          img#loginimage(src='../resources/login.png')
      
      #banner
        img#logo(src='../resources/logocolor.png')
        #tagline
          h1 Better management for the better manager.
          #subtext
            h2 FULLY INTEGRATED EMPLOYEE SCHEDULING

      #sidr-left
        ul
          li
            a(href='#') HOME
          li.active
            a(href='#') FEATURES
          li
            a(href='#') ABOUT
          li
            a(href='#') SIGN UP

      form#sidr-right
        input#login-user(type='text' placeholder='EMAIL')
        input#login-pass(type='password' placeholder='PASSWORD')
        input#login-button.button(type='button', value='LOGIN')

    #intro
